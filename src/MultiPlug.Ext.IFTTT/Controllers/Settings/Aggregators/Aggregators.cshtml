@model MultiPlug.Base.Http.EdgeApp

<section class="row-fluid">

    <div class="row-fluid">
        <div class="box">
            <div class="span3">
                <a href="#"><img alt="IFTTT Logo" src="@Raw(Model.Context.Paths.Assets)images/ifttt.png"></a>
            </div>
            <div class="span6">
                <p style="font-size:22.75px; padding-top:10px; text-align: center;">Aggregators</p>
            </div>
            <div class="span3">
            </div>
        </div>
    </div>

    @Include("MultiPlug.Ext.IFTTT.IFTTTNavigation")

    <div class="row-fluid">
        <div class="box">
            <div class="well">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Event ID</th>
                            <th>Description</th>
                            <th>Subscriptions</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Aggregator in @Model.Extension.Model.AggregatorComponents)
                        {
                            <tr>
                                <td><a href="@Raw(Model.Context.Paths.Home)aggregators/aggregator/?id=@Aggregator.Guid">@Aggregator.Event.Id</a></td>
                                <td><a href="@Raw(Model.Context.Paths.Home)aggregators/aggregator/?id=@Aggregator.Guid">@Aggregator.Event.Description</a></td>
                                <td><a href="@Raw(Model.Context.Paths.Home)aggregators/aggregator/?id=@Aggregator.Guid">@Aggregator.AggregatedSubscriptions.Length</a></td>
                                <td>
                                    <a class="btn btn-red delete-aggregator" href="@Raw(Model.Context.Paths.Home)aggregators/aggregator/delete/?id=@Aggregator.Guid"><i class="icon-trash"></i></a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><a class="btn btn-green" href="@Raw(Model.Context.Paths.Home)aggregators/aggregator/?id="><i class="icon-plus"></i></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
    function ApplyDelete(theSelector) {
        $(theSelector).on('click', '.delete-aggregator', function (event) {
            event.preventDefault();
            var closesttr = $(this).closest("tr");
            $.ajax({
                type: "POST",
                url: $(this).attr('href'),
                success: function () {
                    closesttr.remove();
                }
            });
        });
    }

    ApplyDelete(document);
</script>
