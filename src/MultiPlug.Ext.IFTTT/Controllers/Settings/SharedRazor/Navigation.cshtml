@model MultiPlug.Base.Http.EdgeApp
@functions {
    public string NavLocationIsHome()
    {
        return Model.Context.Paths.Current == Model.Context.Paths.Home ? "active" : string.Empty;
    }

    public string NavLocationIsTimers()
    {
        return Model.Context.Paths.Current.StartsWith(Model.Context.Paths.Home + "timers") ? "active" : string.Empty;
    }

    public string NavLocationIsCaches()
    {
        return Model.Context.Paths.Current.StartsWith(Model.Context.Paths.Home + "caches") ? "active" : string.Empty;
    }

    public string NavLocationIsCounters()
    {
        return Model.Context.Paths.Current.StartsWith(Model.Context.Paths.Home + "counters") ? "active" : string.Empty;
    }

    public string NavLocationIsAggregators()
    {
        return Model.Context.Paths.Current.StartsWith(Model.Context.Paths.Home + "aggregators") ? "active" : string.Empty;
    }

    public string NavLocationIsInjectors()
    {
        return Model.Context.Paths.Current.StartsWith(Model.Context.Paths.Home + "injectors") ? "active" : string.Empty;
    }

    public string NavLocationIsAbout()
    {
        return Model.Context.Paths.Current == Model.Context.Paths.Home + "about/" ? "active" : string.Empty;
    }
}
<div class="row-fluid">
    <ul class="nav nav-tabs">
        <li class="@NavLocationIsHome()"><a href="@Raw(Model.Context.Paths.Home)">Home</a></li>
        <li class="@NavLocationIsTimers()"><a href="@Raw(Model.Context.Paths.Home)timers/">Timers</a></li>
        <li class="@NavLocationIsCaches()"><a href="@Raw(Model.Context.Paths.Home)caches/">Caches</a></li>
        <li class="@NavLocationIsCounters()"><a href="@Raw(Model.Context.Paths.Home)counters/">Counters</a></li>
        <li class="@NavLocationIsAggregators()"><a href="@Raw(Model.Context.Paths.Home)aggregators/">Aggregators</a></li>
        <li class="@NavLocationIsInjectors()"><a href="@Raw(Model.Context.Paths.Home)injectors/">Injectors</a></li>
        <li class="@NavLocationIsAbout()"><a href="@Raw(Model.Context.Paths.Home)about/">About</a></li>
    </ul>
</div>