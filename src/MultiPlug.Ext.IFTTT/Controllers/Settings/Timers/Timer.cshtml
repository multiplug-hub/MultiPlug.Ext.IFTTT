@model MultiPlug.Base.Http.EdgeApp

@functions
{
    string isConnected(bool theValue)
    {
        return (theValue) ? "<i class=\"icon-ok icon-large\"></i>" : "<i class=\"icon-remove icon-large\"></i>";
    }

    string isEnabled(bool theValue)
    {
        return (theValue) ? "checked" : "";
    }
}

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded" autocomplete="off">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span3">
                    <a href="#"><img alt="IFTTT logo" src="@Raw(Model.Context.Paths.Assets)images/ifttt.png"></a>
                </div>
                <div class="span6">
                    <p style="font-size:22.75px; padding-top:10px; text-align: center;">Timer</p>
                </div>
                <div class="span3" style="text-align:right">
                    <button type="submit" value="submit" style="height:40px;" class="item btn"><i class="icon-save icon-large"></i> Save</button>
                </div>
            </div>
        </div>

@Include("MultiPlug.Ext.IFTTT.IFTTTNavigation")

        <div class="row-fluid">
            <h3 class="box-header">
                Properties
            </h3>
            <div class="box non-collapsible">
                <div class="row-fluid">
                    <div class="span1">
                        <div class="row-fluid"><div class="span12">Enabled</div></div>
                        <div class="row-fluid"><div class="span12"><input type="checkbox" name="Enabled" value="true" @Raw(isEnabled(Model.Extension.Model.Enabled)) ></div></div>
                    </div>
                    <div class="span2">
                        <div class="row-fluid"><div class="span12">Auto Reset</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <input type="checkbox" name="AutoReset" value="true" @Raw(isEnabled(Model.Extension.Model.AutoReset))>
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="row-fluid"><div class="span12">Event ID</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <input type="hidden" name="Guid" value="@Model.Extension.Model.Guid">
                                <input name="EventId" class="input-block-level" type="text" placeholder="Event ID" value="@Model.Extension.Model.EventId">
                            </div>
                        </div>
                    </div>
                    <div class="span3">
                        <div class="row-fluid"><div class="span12">Description</div></div>
                        <div class="row-fluid"><div class="span12"><input name="EventDescription" class="input-block-level" type="text" placeholder="Description" value="@Model.Extension.Model.EventDescription"></div></div>
                    </div>
                    <div class="span2">
                        <div class="row-fluid"><div class="span12">Interval (ms)</div></div>
                        <div class="row-fluid"><div class="span12"><input type="number" min="0" class="input-block-level" name="Interval" value="@Model.Extension.Model.Interval"></div></div>
                    </div>
                </div>
            </div>
            <h3 class="box-header">
                Elapsed Event
            </h3>
            <div class="box non-collapsible">
                <div class="row-fluid">
                    <div class="span1">
                        <div class="row-fluid"><div class="span12">Time</div></div>
                        <div class="row-fluid"><div class="span12"><input type="checkbox" name="EventSubjectTime" value="true" @Raw(isEnabled(Model.Extension.Model.EventSubjectTime)) ></div></div>
                    </div>
                    <div class="span2">
                        <div class="row-fluid"><div class="span12">Interval</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <input type="checkbox" name="EventSubjectInterval" value="true" @Raw(isEnabled(Model.Extension.Model.EventSubjectInterval)) >
                            </div>
                        </div>
                    </div>
                    <div class="span3">
                        <div class="row-fluid"><div class="span12">Subject</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <input name="EventSubject" class="input-block-level" type="text" value="@Model.Extension.Model.EventSubject">
                            </div>
                        </div>
                    </div>
                    <div class="span3">
                        <div class="row-fluid"><div class="span12">Value</div></div>
                        <div class="row-fluid"><div class="span12"><input name="EventSubjectValue" class="input-block-level" type="text" value="@Model.Extension.Model.EventSubjectValue"></div></div>
                    </div>
                    <div class="span3">
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6">
                <h3 class="box-header">
                    Start Subscriptions
                </h3>
                <div class="box non-collapsible">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="span4">Start on System Start</div>
                            <div class="span6"><input type="checkbox" name="StartOnSystemStart" value="true" @Raw(isEnabled(Model.Extension.Model.StartOnSystemStart)) ></div>
                            <div class="span2"><a class="btn btn-blue action-timer" href="@Raw(Model.Context.Paths.Home)timers/timer/start/?id=@Model.Extension.Model.Guid"><i class="icon-play"></i></a></div>
                        </div>
                    </div>
                    <ul id="StartSubscriptions" style="list-style: none;">
@for (int i = 0; i < @Model.Extension.Model.StartSubscriptionGuid.Length; i++)
{
                        <li>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="span2">
                                        <button value="@Model.Extension.Model.StartSubscriptionGuid[i]" data-sub-type="start" type="button" class="item btn btn-red delete-sub"><i class="icon-trash icon-large"></i></button>
                                    </div>
                                    <div class="span9">
                                        <input name="StartSubscriptionGuid" type="hidden" value="@Model.Extension.Model.StartSubscriptionGuid[i]" />
                                        <input name="StartSubscriptionId" type="text" value="@Model.Extension.Model.StartSubscriptionId[i]" class="input-block-level mp-event-picker">
                                    </div>
                                    <div class="span1">
                                        @Raw(isConnected(Model.Extension.Model.StartSubscriptionConnected[i]))
                                    </div>
                                </div>
                            </div>
                        </li>
}
                    </ul>
                    <ul style="list-style: none;">
                        <li>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="span2">
                                        <button type="button" id="NewStartSubscription" class="btn btn-green"><i class="icon-plus"></i></button>
                                    </div>
                                    <div class="span10">
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>

                </div>
            </div>

            <div class="span6">
                <h3 class="box-header">
                    Stop Subscriptions
                </h3>
                <div class="box non-collapsible">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="span4"></div>
                            <div class="span6"></div>
                            <div class="span2"><a class="btn btn-blue action-timer" href="@Raw(Model.Context.Paths.Home)timers/timer/stop/?id=@Model.Extension.Model.Guid"><i class="icon-pause"></i></a></div>
                        </div>
                    </div>
                    <ul id="StopSubscriptions" style="list-style: none;">
@for ( int i=0; i < @Model.Extension.Model.StopSubscriptionGuid.Length; i++)
{
                        <li>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="span2">
                                        <button value="@Model.Extension.Model.StopSubscriptionGuid[i]" data-sub-type="stop" type="button" class="item btn btn-red delete-sub"><i class="icon-trash icon-large"></i></button>
                                    </div>
                                    <div class="span9">
                                        <input name="StopSubscriptionGuid" type="hidden" value="@Model.Extension.Model.StopSubscriptionGuid[i]" />
                                        <input name="StopSubscriptionId" type="text" value="@Model.Extension.Model.StopSubscriptionId[i]" class="input-block-level mp-event-picker">
                                    </div>
                                    <div class="span1">
                                        @Raw(isConnected(Model.Extension.Model.StopSubscriptionConnected[i]))
                                    </div>
                                </div>
                            </div>
                        </li>
}
                    </ul>

                    <ul style="list-style: none;">
                        <li>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="span2">
                                        <button type="button" id="NewStopSubscription" class="btn btn-green"><i class="icon-plus"></i></button>
                                    </div>
                                    <div class="span10">
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</form>
<script type="text/javascript" src="@Raw(Model.Context.Paths.Assets)js/jquery.dirty.min.js"></script>
<script>

@if ( string.IsNullOrEmpty( Model.Extension.Model.Guid))
{
    <text>$("form").dirty("setAsDirty");</text>
}

    function newSubElement(prefix) {
        return '<li>\
            <div class="control-group">\
                <div class="controls">\
                    <div class="span2">\
                    </div>\
                    <div class="span9">\
                        <input name="' + prefix + 'SubscriptionGuid" type="hidden" value="">\
                        <input name="' + prefix + 'SubscriptionId" type="text" value="" class="input-block-level mp-event-picker">\
                    </div>\
                    <div class="span1">\
                        <i class=\"icon-remove icon-large\"></i>\
                    </div>\
                </div>\
            </div>\
        </li>';
    }

    $('#NewStartSubscription').on('click', function () {
        $('#StartSubscriptions').append(newSubElement('Start'));
        var NewAggregateSubscription = $('#StartSubscriptions li:last-child');
        applyMPEventPickerOnClick();
        ApplyDelete(NewAggregateSubscription.find(':button'));
        $("form").dirty("setAsDirty");
    });

    $('#NewStopSubscription').on('click', function () {
        $('#StopSubscriptions').append(newSubElement('Stop'));
        var NewAggregateSubscription = $('#StopSubscriptions li:last-child');
        applyMPEventPickerOnClick();
        ApplyDelete(NewAggregateSubscription.find(':button'));
        $("form").dirty("setAsDirty");
    });


    function ApplyDelete(theSelector) {
        $(theSelector).on('click', '.delete-sub', function () {
            var id = $(this).attr('value');
            var subtype = $(this).data('sub-type');
            var closestli = $(this).closest("li");
            if (confirm("Delete the Subscription?")) {
                $.ajax({
                    type: "POST",
                    url: '@Raw(Model.Context.Paths.Current)subscriptiondelete/?id=@Model.Extension.Model.Guid&subtype=' + subtype + '&subid=' + id,
                    success: function () {
                        closestli.remove();
                    }
                });
            }
        });
    }

    $(document).on('click', '.action-timer', function (event) {
        event.preventDefault();
        $.ajax({
            type: "POST",
            url: $(this).attr('href'),
            success: function () {
            }
        });
    });

    ApplyDelete(document);

</script>
